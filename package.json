{
  "name": "openai-md",
  "type": "module",
  "version": "0.0.3",
  "description": "A Node.js (Typescript) package/CLI app that uses the OpenAI API to generate content in the form of markdown files.",
  "main": "lib/index.js",
  "bin": "lib/cli.js",
  "files": [
    "lib/**/*"
  ],
  "types": "lib/index.d.ts",
  "scripts": {
    "lint": "eslint",
    "format": "prettier --write \"src/**/*.+(js|ts|json)\"",
    "build": "tsc",
    "test": "mocha './test/**/*.test.*'",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm run test",
    "preversion": "npm run lint"
  },
  "author": {
    "name": "Dennis Hodges",
    "email": "fermentationist@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fermentationist/openai-md.git"
  },
  "keywords": [
    "openai",
    "markdown",
    "node",
    "cli",
    "typescript"
  ],
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.0.3",
    "openai": "^3.2.1",
    "yargs": "^17.7.1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.3",
    "@types/yargs": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "mocha": "^10.2.0",
    "prettier": "^2.8.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  }
}
